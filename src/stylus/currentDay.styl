.currentDay
    padding: 20px 20px 20px 40px
    width: 25vw
    &__form
        width: 100%
        display: flex
        justify-content: center
        padding: 20px
        &--icon
            font-size: 20px
            z-index: 21
        &--input, &--button
            background-color: none
            height 30px
            border: 0
        &--input
            position relative
            padding-left: 6%
            width: 80%
            &:focus
                border: 1px solid lightblue
        &--button
            border-radius: 50px
            i
                font-size: 150%
            &:hover, &:focus
                cursor pointer
                background-color: lightblue
    &__imageContainer
        display: flex
        justify-content: center
        width: 100%
        &--image
            width: 280px
            height: 280px
            object-fit: cover
    &__temp
        display: flex
        margin: 20px 0
        &--grades
            font-size: 4rem
            font-weight: 400
            margin: 0
            padding: 0
        &--unit    
            margin-top: 0.4em
            font-size: 2rem
    &__details
        font-size: 1.3rem
        padding-bottom: 1.2rem
        border-bottom: 1px solid gray
        &--day
            font-weight: 800
        &--hour
            opacity: 0.6
    &__weather
        margin: .5rem 0
        width: 100%
        display: flex
        &--icon
            width: max-content
            margin-right: 1rem
            i 
                width: auto
                display: flex
                margin: 0
                padding: 0
        &--description
            width: 60%
            p
                width: auto
                margin: 0
                padding: 0
    &__name
        display: flex
        justify-content: center
        align-items: center
        width: 100%
        height: 10vh
        margin: .5rem auto 0 auto
        background-image: url("https://picsum.photos/id/10/2500/1667")
        background-repeat: no-repeat
        background-size: cover
        color: black
        border-radius: 20px

.icons
    display: flex
    flex-direction: column
    align-self: left
    i
        background-color: #f6f6f8
        width: 30%
        margin: 4px 0
        border-radius: 30px
        font-size: 150%
        padding-left: 5px
        -webkit-box-shadow: 0px 0px 1px 0px rgba(0,0,0,0.49)
        -moz-box-shadow: 0px 0px 1px 0px rgba(0,0,0,0.49)
        box-shadow: 0px 0px 1px 0px rgba(0,0,0,0.49)
        &:hover
            background-color: lightblue
            cursor: pointer
    span
        margin-left: 10px
    


@media only screen and (max-width: 800px)
    .currentDay
        width: 100%
        display: flex
        flex-direction: column
        &__imageContainer--image
            height: 140px